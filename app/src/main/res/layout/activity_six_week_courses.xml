<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9D0C1"
    tools:context=".SixWeekCourses">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUR SIX WEEK COURSES"
        android:textColor="#b05d84"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Child Minding Course Section -->
    <ImageView
        android:id="@+id/childMindingImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:contentDescription="Child Minding Course"
        app:srcCompat="@drawable/childminding"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/childMindingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Child Minding: Provides skills for child care including health, safety, play activities, nutrition, and communication with parents. This course is ideal for those who want to work as professional child caregivers."
        android:textSize="14sp"
        android:textColor="#6f3f2d"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/childMindingImage"
        app:layout_constraintStart_toEndOf="@id/childMindingImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="spread" />

    <Button
        android:id="@+id/childBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHILD MINDING"
        android:backgroundTint="#b05d84"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/childMindingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/childMindingImage" />

    <!-- Cooking Course Section -->
    <ImageView
        android:id="@+id/cookingImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:contentDescription="Cooking Course"
        app:srcCompat="@drawable/cooking"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/childBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cookingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cooking: Teaches participants how to prepare healthy meals, meal planning, nutritional education, and essential cooking techniques for personal and professional use."
        android:textSize="14sp"
        android:textColor="#6f3f2d"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/cookingImage"
        app:layout_constraintStart_toEndOf="@id/cookingImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="spread" />

    <Button
        android:id="@+id/cookingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COOKING"
        android:backgroundTint="#b05d84"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cookingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cookingImage" />

    <!-- Garden Maintenance Course Section -->
    <ImageView
        android:id="@+id/gardeningImage"
        android:layout_width="137dp"
        android:layout_height="119dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Garden Maintenance Course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cookingBtn"
        app:srcCompat="@drawable/garden" />


    <TextView
        android:id="@+id/gardeningText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Garden Maintenance: Covers gardening techniques like planting, pruning, pest management, and sustainable gardening practices. Ideal for both professional and home gardeners."
        android:textColor="#6f3f2d"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/gardeningImage"
        app:layout_constraintTop_toTopOf="@id/gardeningImage"
        app:layout_constraintWidth_default="spread" />

    <Button
        android:id="@+id/gardenBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#b05d84"
        android:text="GARDEN MAINTENANCE"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/gardeningImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gardeningImage" />

    <Button
        android:id="@+id/sixMonthsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#b05d84"
        android:text="VIEW SIX MONTHS COURSES"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gardenBtn" />

    <Button
        android:id="@+id/contactfeesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#b05d84"
        android:text="Go to contact fees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

</androidx.constraintlayout.widget.ConstraintLayout>